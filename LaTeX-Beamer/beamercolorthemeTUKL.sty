\ProvidesPackage{beamercolorthemeTUKL}[2015/02/05 v0.93 beamer color theme in the corporate design of the University of Kaiserslautern]

\mode<presentation>

\setbeamercolor*{structure}{fg=black,bg=tuklblue!20!white}
% Color
\setbeamercolor{palette departement}{use=structure,fg=tukldeptfg,bg=tukldeptbg}
%
\setbeamercolor*{palette primary}{use=structure,fg=tuklblue,bg=white}
\setbeamercolor*{palette secondary}{use=structure,fg=tuklblue,bg=white}
\setbeamercolor*{palette tertiary}{use=structure,fg=tuklblue,bg=white}
\setbeamercolor*{palette quaternary}{fg=tuklblue,bg=tuklblue!25!white}

\setbeamercolor*{sidebar}{use=structure,bg=structure.fg}

\setbeamercolor*{titlelike}{parent=palette primary}
\setbeamercolor*{upper separation line foot}{bg=tuklwarmgray!40}
\setbeamercolor{institute}{fg=tuklblue}
\setbeamercolor{date}{fg=black}
\setbeamercolor{subtitle}{fg=tuklblue}
\setbeamercolor{framesubtitle}{fg=tuklblue!80}

\setbeamercolor*{separation line}{fg=tuklwarmgray}
\setbeamercolor*{fine separation line}{bg=tuklwarmgray!60}

\setbeamercolor*{item}{fg = tuklblue!75}

\setbeamercolor*{block title}{use=structure,fg=black,bg=tuklblue!20}
\setbeamercolor*{block title alerted}{use=alerted text,fg=black,bg=alerted text.bg!75!white}
\setbeamercolor*{block title example}{use=example text,fg=black,bg=example text.bg!75!white}

\setbeamercolor*{block body}{parent=normal text,use=block title,bg=block title.bg!10!bg}
\setbeamercolor*{block body alerted}{parent=normal text,use=block title alerted,bg=block title alerted.bg!10!bg}
\setbeamercolor*{block body example}{parent=normal text,use=block title example,bg=block title example.bg!10!bg}

\setbeamercolor*{author in head/foot}{parent=palette quarternary, fg=tuklblue, bg=white}
\setbeamercolor*{logo in head/foot}{parent=palette primary, fg=black, bg=tuklblue!20}
\setbeamercolor*{fachbereich in head/foot}{parent=palette primary, fg=white, bg=tuklblue}
\setbeamercolor*{title in head/foot}{parent=palette quarternary, fg=tuklblue, bg=white}
\setbeamercolor*{date in head/foot}{parent=palette quarternary, fg=tukl, bg=white}

\setbeamercolor{section in head/foot}{parent=palette tertiary, fg=tuklwarmgray} 
\setbeamertemplate{section in head/foot shaded}[default][33]
\setbeamercolor*{subsection in head/foot}{parent=palette primary,fg=tuklwarmgray!40}

\mode
<all>
